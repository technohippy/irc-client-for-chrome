{
    "name": "__MSG_appName__",
    "short_name": "__MSG_shortAppName__",
    "description": "__MSG_appDescription__",
    "version": "1.0",
    "manifest_version": 2,
    "default_locale": "en",
    "permissions": [
        "app.window",
        "storage",
        {
            "socket": [
                "tcp-connect:*:*"
            ]
        }
    ],
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "app": {
        "background": {
            "scripts": [
                "scripts/main.js",
                "scripts/chromereload.js"
            ]
        }
    }
}
